.askmo{

  .view-container{
    width: 60%;
    margin: 15px auto;
    background: none;
    text-align: center;
  }

  button{
    background: none;
    box-shadow: none;
    text-shadow: none;
    font-family: monospace;
    font-weight: 600;
    font-size: 24px;
    color: white;
    margin-top: 20px;
    border: 2px solid white;
    border-radius: 7px;
    outline: none !important;

    &:focus,
    &:active{
      outline: none;
    }

    &:hover{
      border: 2px solid white;
      background-color: white;
      color: black;
    }

    &.show-data{
      border-style: dashed !important;
      font-weight: 400;
      font-size: 18px;

      @media screen and (max-width: 630px) {
        display: none;
      }
    }
  }

  .data-view{
    float: left;
    background-color: rgba(13, 48, 104, .75);

    button{
      margin: 20px;
      font-size: 16px;
    }

    svg{
      text.predicted{
        font-size: 10px;
        stroke: rgba(255,255,255,.1);
      }
      rect.predicted{
        fill: rgba(0,0,0,.7);
      }
    }

    .legend{
      float: right;
      position: relative;
      width: 120px;
      padding: 7px;
      background-color: rgba(13, 48, 125, .80);

      .sample{
        display: inline-block;
        position: absolute;
        right: 0;
        height: 12px;
        width: 12px;
        margin: 4px;
      }

      .cats .sample{
        background-color: rgb(31, 119, 180);
      }
      .dogs .sample{
        background-color: rgb(255, 127, 14);
      }
      .predicted .sample{
        background-color: rgba(0,0,0,.9);
      }
    }
  }

  .mostradamus{
    position: relative;
    height: 300px;
    width: 95%;
    margin: 10px auto;
    background: url(<%= asset_path 'mostradamus-2x.png' %>);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: calc(50% + 15px) 50%;
  }

  .talk-bubble{
    position: absolute;
    top: 150px;
    right: calc(50% + 75px);
    left: calc(50% - 290px);
    border: 5px solid white;
    border-radius: 20px;
    text-align: center;
    .arrow{
      position: absolute;
      top: 30px;
      left: calc(100% + 3px);
      width: 0;
      height: 0;
      border-top: 12px solid transparent;
      border-bottom: 12px solid transparent;
      border-left: 12px solid white;
      transform: rotate(9deg);
    }

    @media screen and (max-width: 630px) {
      position: relative;
      margin: 5px auto;
      top: auto;
      right: auto;
      left: auto;
      border: none;
      .arrow{
        display: none;
      }
    }
  }

  .thought-bubble{
    position: absolute;
    top: 10px;
    right: calc(50% - 285px);
    left: calc(50% + 60px);
    height: 150px;
    background: url(<%= asset_path 'thought.png' %>);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    text-align: center;

    .card{
      margin: 20px auto;
      height: 70px;
      width: 50px;
    }

    @media screen and (max-width: 630px) {
      position: relative;
      margin: 5px auto;
      top: auto;
      right: auto;
      left: auto;
      border: none;
      background: none;

      .card{
        margin: 10px auto;
        height: 160px;
        width: 110px;
      }
    }
  }

  .input-form{
    width: 60%;
    margin: 15px auto;
    background: none;
    text-align: center;

    input[type="text"],
    input[type="number"]{
      border: none;
      box-shadow: none;
      border-bottom: 2px solid black;
      font-size: 24px;
      text-transform: capitalize;
      text-align: center;
      background: none;
      color: white;
    }

    /* Hide HTML5 Up and Down arrows. */
    input[type="number"]::-webkit-outer-spin-button, input[type="number"]::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type="number"] {
        -moz-appearance: textfield;
    }

    .input-group-addon{
      background: none;
      border: none;
      border-left: 2px solid black;
      font-size: 18px;
      color: black;
    }
  }

  .card{
    position: relative;
    width: 100px;
    height: 140px;
    overflow: hidden;
    border-radius: 7px;

    .image{
      height: 70%;
      width: 90%;
      margin: 15px auto;
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;

      &.cat{
        background-image: url(<%= asset_path 'cat.png' %>);
      }
      &.dog{
        background-image: url(<%= asset_path 'dog.png' %>);
      }
    }

    .front{
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(153, 192, 255, .6);
      border-radius: inherit;
      perspective: 1000px;
      transition: 0.6s;
      transform-style: preserve-3d;
      backface-visibility: hidden;

      &.flipped{
        transform: rotateY(180deg);
      }
    }

    .back{
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(153, 192, 255, .9);
      border-radius: inherit;
      perspective: 1000px;
      transition: 0.6s;
      transform-style: preserve-3d;
      backface-visibility: hidden;
      transform: rotateY(180deg);

      &.flipped{
        transform: rotateY(0deg);
      }
    }
  }

  .card-picker{
    display: inline-block;
    margin-left: 50%;
    transform: translateX(-50%);

    .card{
      display: inline-block;
      margin: 5px;
      cursor: pointer;
      &:hover{
        background-color: rgba(153, 192, 255, .9);
      }
    }
  }

}
